		User u1 = new User("c2xl89", "vlsan_", "Vin√≠cius Leonardo dos Santos", 12);
		User u2 = new User("c8yl11", "zerinho", "Juscicleyson da Silva Nunes", 71);
		
		userRepository.saveAll(Arrays.asList(u1, u2));
	}

}
